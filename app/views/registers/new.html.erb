<h3 class="center">線上報名</h3>
<hr class="hr">
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <tbody>
      <table class="table table-hover">
        <tr>
          <td>報名者姓名</td>
          <td><%= @register.name %></td>
        </tr>
        <tr>
          <td>E-mail</td>
          <td><%= @register.email %></td>
        </tr>
      </table>
    </tbody>

    <%= form_for(@register) do |f| %>
      <%= f.hidden_field :name, class: 'form-control' %>

      <%= f.hidden_field :email, class: 'form-control' %>

      <%= f.submit "送出", class: "btn btn-lg btn-success" %>
    <% end %>

  </div>
</div>