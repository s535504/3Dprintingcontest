<div class="container new center">
  <h3>
    <% if language=='en' %>
      Confirmation
    <% elsif language=='sc' %>
      报名确认
    <% else %>
      報名確認
    <% end %>
  </h3>
  <hr class="hr">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <tbody>
        <table class="table table-hover">
          <tr>
            <% if language=='en' %>
              <td>Full Name</td>
            <% elsif language=='sc' %>
              <td>报名者姓名</td>
            <% else %>
              <td>報名者姓名</td>
            <% end %>
            <td><%= @register.name %></td>
          </tr>
          <tr>
            <td>E-mail</td>
            <td><%= @register.email %></td>
          </tr>
        </table>
      </tbody>

      <%= form_for(@register) do |f| %>
        <%= f.hidden_field :name, class: 'form-control' %>
        <%= f.hidden_field :email, class: 'form-control' %>
        <br>
        <div>
          <% if language=='en' %>
            <%= f.submit "CONFIRM", class: "btn btn-lg btn-success" %>
          <% elsif language=='sc' %>
            <%= f.submit "确认报名", class: "btn btn-lg btn-success" %>
          <% else %>
            <%= f.submit "確認報名", class: "btn btn-lg btn-success" %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>