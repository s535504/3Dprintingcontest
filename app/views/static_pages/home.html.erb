  <div class="contactus contactTrigger panel-default">
    <div class="bg-overlay pattern"></div>
    <div data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" role="tab" id="headingOne">
      <div class="default-text">
        <h1 class="center">
          有任何疑問嗎？
        </h1>
      </div>
      <div class="hover-text" id="hover-text-trigger">
        <h1 class="center">
          聯絡我們 <span class="glyphicon glyphicon-envelope"></span>
        </h1>
      </div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <div class="container-fluid">
          <%= form_tag declare_path, class: "emailform", method: :post do %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= label :name, "姓名", class: "control-label sr-only" %>
                  <%= text_field_tag :name, params[:name], placeholder:"姓名", class: "form-control input-lg" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= label :name, "E-mail", class: "control-label sr-only" %>
                  <%= text_field_tag :name, params[:name], placeholder:"E-mail", class: "form-control input-lg" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12" style="text-align: center;">
                <div class="form-group">
                  <%= label :name, "主旨", class: "control-label sr-only" %>
                  <%= text_field_tag :name, params[:name], placeholder:"主旨", class: "form-control input-lg" %>
                </div>
                 <div class="form-group">
                  <%= label :name, "訊息", class: "control-label sr-only" %>
                  <%= text_area_tag :name, params[:name], placeholder:"訊息", class: "form-control input-lg", rows:7 %>
                </div>
                <div class="form-group">
                  <%= button_tag "送出", class: "btn btn-lg btn-default", id: "emailsubmit", style:"" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

