<div class="contactus contactTrigger panel-default">
  <div class="container-fluid">
    <div class="bg-overlay pattern"></div>
    <div data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" role="tab" id="headingOne">
      <div class="default-text">
        <h1 class="center">
          <% if language=='en' %>
            HAVE ANY QUESTIONS?
          <% elsif language=='sc' %>
            有任何疑问吗?
          <% else %>
            有任何疑問嗎？
          <% end %>
        </h1>
      </div>
      <div class="hover-text" id="hover-text-trigger">
        <h1 class="center">
          <% if language=='en' %>
            CONTACT US 
          <% elsif language=='sc' %>
            联系我们 
          <% else %>
            聯絡我們 
          <% end %>
          <span class="glyphicon glyphicon-envelope"></span>
        </h1>
      </div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <div class="container-fluid">
          <%= form_tag declare_path, class: "emailform", method: :post do %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= label :name, "姓名", class: "control-label sr-only" %>
                  <% if language=='en' %>
                    <%= text_field_tag :name, params[:name], placeholder:"Name", class: "form-control input-lg" %>
                  <% elsif language=='sc' %>
                    <%= text_field_tag :name, params[:name], placeholder:"名称", class: "form-control input-lg" %>
                  <% else %>
                    <%= text_field_tag :name, params[:name], placeholder:"姓名", class: "form-control input-lg" %>
                  <% end %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= label :name, "E-mail", class: "control-label sr-only" %>
                  <%= text_field_tag :name, params[:name], placeholder:"E-mail", class: "form-control input-lg" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12" style="text-align: center;">
                <div class="form-group">
                  <%= label :name, "主旨", class: "control-label sr-only" %>
                  <% if language=='en' %>
                    <%= text_field_tag :name, params[:name], placeholder:"Subject", class: "form-control input-lg" %>
                  <% elsif language=='sc' %>
                    <%= text_field_tag :name, params[:name], placeholder:"主旨", class: "form-control input-lg" %>
                  <% else %>
                    <%= text_field_tag :name, params[:name], placeholder:"主旨", class: "form-control input-lg" %>
                  <% end %>
                </div>
                 <div class="form-group">
                  <%= label :name, "訊息", class: "control-label sr-only" %>
                  <% if language=='en' %>
                    <%= text_area_tag :name, params[:name], placeholder:"Message", class: "form-control input-lg", rows:7 %>
                  <% elsif language=='sc' %>
                    <%= text_area_tag :name, params[:name], placeholder:"讯息", class: "form-control input-lg", rows:7 %>
                  <% else %>
                    <%= text_area_tag :name, params[:name], placeholder:"訊息", class: "form-control input-lg", rows:7 %>
                  <% end %>
                </div>
                <div class="form-group">
                  <% if language=='en' %>
                    <%= button_tag "Submit", class: "btn btn-lg btn-default", id: "emailsubmit", style:"" %>
                  <% elsif language=='sc' %>
                    <%= button_tag "提交", class: "btn btn-lg btn-default", id: "emailsubmit", style:"" %>
                  <% else %>
                    <%= button_tag "送出", class: "btn btn-lg btn-default", id: "emailsubmit", style:"" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(window).bind('scroll',function(){
    var navheight=$(window).height()-70;
    var introtop=$(window).height()-200;
    var introbottom=$(window).height()+600;
    if ($(window).scrollTop()>navheight){
      $('.navbar-default').addClass('on');
    }
    else{
      $('.navbar-default').removeClass('on');
    }
    if ($(window).scrollTop()>introtop && $(window).scrollTop()<introbottom){
      $('.intro_holder').addClass('active');
    }
    else{
      $('.intro_holder').removeClass('active');
    }
  })
  $('.contactTrigger').click(function(){
    $('.contactus').css({
      "background-attachment": "fixed",
      "background-size":"cover"
    });
    $(this).removeClass('contactTrigger');
    $('#hover-text-trigger').removeAttr("id");
    if ($('#collapseOne').hasClass("in")){
      $('#collapseOne').removeAttr("id");
    }
  })
</script>
